{% extends 'base.html.twig' %} {% block title %}Réinitialisation {% endblock %}
{% block body %}

<section class="bg-indigo-50 dark:bg-blue-900">
  <div
    class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0"
  >
    <div
      class="w-full bg-white rounded-lg shadow-lg dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700"
    >
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1
          class="text-xl text-center font-bold leading-tight tracking-tight text-cyan-400 md:text-2xl dark:text-white"
        >
          Réinitialisation mot de passe
        </h1>

        {{ form_errors(form) }}
        <div>
          <p id="message_reset_email"></p>
        </div>
        {{
          form_start(form, {
            attr: {
              novalidate: "novalidate",
              class: "space-y-4 md:space-y-6",
              id: "form_reset_email"
            }
          })
        }}
        {{ form_row(form.email) }}
        <div class="text-sm text-red-700">
          <small id="emailSmall"></small>
        </div>
        <button type="submit" class="w-full btn-info my-3" id="submit_reset">
          Envoyer
        </button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
</section>

{% endblock %}
